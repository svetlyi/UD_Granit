@model UD_Granit.ViewModels.Council.Edit

@{
    ViewBag.Title = "Редактирование информации о диссертационном совете";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Edit", "Council"))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Данные о прикреплённой организации</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Council.Organization)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Council.Organization)&nbsp;
            @Html.ValidationMessageFor(model => model.Council.Organization)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Council.Department)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Council.Department)&nbsp;
            @Html.ValidationMessageFor(model => model.Council.Department)
        </div>
    </fieldset>
    <fieldset>
        <legend>Основная информация</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Council.Number)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Council.Number)&nbsp;
            @Html.ValidationMessageFor(model => model.Council.Number)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Council.Address)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Council.Address)&nbsp;
            @Html.ValidationMessageFor(model => model.Council.Address)
        </div>
    </fieldset>
    <fieldset>
        <legend>Прочая информация</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Council.FoundationDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Council.FoundationDate)&nbsp;
            @Html.ValidationMessageFor(model => model.Council.FoundationDate)
        </div>
    </fieldset>
    if (Model.CanDefineRoles)
    {
    <fieldset>
        <legend>Руководящий состав</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Chairman)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Chairman, Model.Members)&nbsp;
            @Html.ValidationMessageFor(model => model.Chairman)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ViceChairman)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ViceChairman, Model.Members)&nbsp;
            @Html.ValidationMessageFor(model => model.ViceChairman)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Secretary)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Secretary, Model.Members)&nbsp;
            @Html.ValidationMessageFor(model => model.Secretary)
        </div>
    </fieldset>
    }
    
    <div class="control">
        <button>Принять изменения</button>
    </div>
}

<script>
    $(function () {
        $("#Council_FoundationDate").appendDtpicker({ locale: "ru", dateOnly: true, dateFormat: "DD/MM/YYYY" });
    });
</script>
