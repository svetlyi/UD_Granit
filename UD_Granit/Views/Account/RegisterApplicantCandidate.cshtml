        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.User.DocumentOfEducation)&nbsp;
            @Html.ValidationMessageFor(model => model.User.DocumentOfEducation)
        </div>
    </fieldset>
    
    <fieldset>
        <legend>Информация о научном руководителе</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ScientificDirector.FirstName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ScientificDirector.FirstName)
            @Html.ValidationMessageFor(model => model.ScientificDirector.FirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ScientificDirector.SecondName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ScientificDirector.SecondName)
            @Html.ValidationMessageFor(model => model.ScientificDirector.SecondName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ScientificDirector.LastName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ScientificDirector.LastName)
            @Html.ValidationMessageFor(model => model.ScientificDirector.LastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ScientificDirector.Degree)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ScientificDirector.Degree)
            @Html.ValidationMessageFor(model => model.ScientificDirector.Degree)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ScientificDirector.Organization)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ScientificDirector.Organization)
            @Html.ValidationMessageFor(model => model.ScientificDirector.Organization)
