        <div class="editor-field">
            @Html.TextBoxFor(model => model.ScientificDirector.Organization_Post)
            @Html.ValidationMessageFor(model => model.ScientificDirector.Organization_Post)
        </div>
    </fieldset>
    
    <div class="control">
        <button>Зарегистрироваться</button>
    </div>
}

@section scripts {
	<script>
		$(function () {
			$("#User_Birthday").appendDtpicker({ locale: "ru", dateOnly: true, closeOnSelected: true, firstDayOfWeek: 1 });
		});
	</script>
}
